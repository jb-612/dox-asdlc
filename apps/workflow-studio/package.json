{
  "name": "asdlc-workflow-studio",
  "version": "0.1.0",
  "description": "Visual workflow builder for agentic SDLC",
  "main": "dist/main/index.js",
  "scripts": {
    "dev": "npm run build:preload && concurrently \"npm run dev:main\" \"npm run dev:renderer\" \"wait-on http://localhost:5173 && VITE_DEV_SERVER_URL=http://localhost:5173 electron dist/main/index.js\"",
    "dev:main": "vite build --config vite.config.main.ts --watch",
    "dev:renderer": "vite --config vite.config.renderer.ts",
    "build": "npm run build:preload && npm run build:main && npm run build:renderer",
    "build:main": "vite build --config vite.config.main.ts",
    "build:preload": "vite build --config vite.config.preload.ts",
    "build:renderer": "vite build --config vite.config.renderer.ts",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:build": "npm run build && playwright test",
    "test:e2e:ui": "playwright test --ui",
    "lint": "eslint src/",
    "postinstall": "electron-rebuild -f -w node-pty"
  },
  "dependencies": {
    "@dagrejs/dagre": "^2.0.4",
    "@headlessui/react": "^1.7.0",
    "@heroicons/react": "^2.0.0",
    "@xterm/addon-fit": "^0.10.0",
    "@xterm/xterm": "^5.5.0",
    "dockerode": "^4.0.9",
    "ioredis": "^5.3.0",
    "node-pty": "^1.0.0",
    "react": "^18.2.0",
    "react-diff-viewer-continued": "^4.1.2",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "reactflow": "^11.10.0",
    "uuid": "^9.0.0",
    "zod": "^3.22.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.6.0",
    "@playwright/test": "^1.58.2",
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@types/dagre": "^0.7.53",
    "@types/dockerode": "^4.0.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.0",
    "@vitejs/plugin-react": "^4.2.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^8.2.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.0.0",
    "jsdom": "^24.0.0",
    "postcss": "^8.4.0",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "wait-on": "^7.2.0"
  }
}
